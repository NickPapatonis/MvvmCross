<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!-- Application theme -->
	<style name="AppTheme" parent="AppTheme.Base">
	</style>
	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    
    <item name="windowActionModeOverlay">false</item>
		<item name="android:windowBackground">@android:color/white</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:textCursorDrawable">@null</item>
	</style>
  
	<style name="AppTheme.Login"
		parent="AppTheme.Base">
		<item name="colorControlNormal">@color/gray</item>
		<item name="colorControlActivated">@color/colorPrimary</item>
		<item name="colorControlHighlight">@color/med_gray</item>
		<item name="android:statusBarColor">@color/dark_gray</item>
	</style>
	<style name="AppTheme.Menu"
		parent="AppTheme.Base">
		<item name="colorPrimary">@color/black</item>
	</style>
	<style name="AppTheme.Splash"
		parent="AppTheme.Base">
		<item name="android:statusBarColor">@color/colorPrimaryDark</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@color/colorAccent</item>
	</style>

  <style name="NavigationText" parent="@android:style/TextAppearance"/>
  <style name="NavigationText.White">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/text_medium</item>
  </style>
  <style name="NavigationText.Gray">
    <item name="android:textColor">@color/light_gray</item>
    <item name="android:textSize">@dimen/text_medium</item>
  </style>

  <style name="DashboardStyle" parent="@android:style/TextAppearance"/>
  <style name="DashboardStyle.HeaderText">
    <item name="android:textSize">@dimen/text_huge</item>
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:background">@color/colorPrimaryDark</item>
  </style>
  <style name="DashboardStyle.HeaderImage">
    <item name="android:background">@color/colorPrimaryDark</item>
  </style>
  <style name="DashboardStyle.TitleText">
    <item name="android:textSize">@dimen/text_tiny</item>
    <item name="android:textColor">@color/dashboard_text_color</item>
  </style>
  <style name="DashboardStyle.Subtext">
    <item name="android:textSize">@dimen/text_tinier</item>
    <item name="android:textColor">@color/cardDescriptionText</item>
  </style>
  <style name="DashboardStyle.LandscapeTitle">
    <item name="android:textSize">@dimen/text_giant</item>
    <item name="android:textColor">@color/dashboard_text_color</item>
  </style>
  <style name="DashboardStyle.LandscapeSubtext">
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:textColor">@color/cardDescriptionText</item>
  </style>

</resources>